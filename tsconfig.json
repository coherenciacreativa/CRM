{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": false,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "lib": [
      "ES2020",
      "DOM"
    ],
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "include": [
    "next-env.d.ts",
    "api/**/*",
    "lib/**/*",
    "pages/**/*",
    "__tests__/**/*",
    "types/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
